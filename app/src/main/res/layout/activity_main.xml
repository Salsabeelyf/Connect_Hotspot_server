<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.salsabeel.connect_hotspot_server.MainActivity">

    <Button
        android:id="@+id/servetBtn"
        style="@android:style/Widget.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:elevation="0dp"
        android:enabled="false"
        android:text="Start" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:splitTrack="false"
        android:text="Hotspot"
        android:textColor="@android:color/black" />

    <!--  Uncomment this to receive message from client
    <TextView
        android:id="@+id/msgView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/servetBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:text="message"
        android:textColor="@android:color/black"
        android:visibility="visible" />

    <TextView
        android:id="@+id/msgLabelView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/servetBtn"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="11dp"
        android:text="Received Message"
        android:textColor="@android:color/black"
        android:visibility="visible" />
-->
    <TextView
        android:id="@+id/ipView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:text="Connect Controller to ip at: ---.---.---.---"
        android:textColor="@android:color/black" />


</RelativeLayout>
